{
  "name": "geminilabs/flarum-bridge",
  "type": "wordpress-plugin",
  "description": "Allows WordPress users to sign-in to a sub-directory Flarum installation",
  "keywords": [
    "wordpress",
    "plugin",
    "flarum",
    "sso"
  ],
  "license": "GPLv3",
  "authors": [
    {
      "name": "Paul Ryley",
      "email": "paul@geminilabs.io"
    }
  ],
  "archive": {
    "exclude": [
      "/tests",
      "/*.js",
      "/*.json",
      "/*.lock",
      "/*.md",
      "/*.sh",
      "/*.xml",
      "/*.yml",
      "/.*"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6"
  }
}
